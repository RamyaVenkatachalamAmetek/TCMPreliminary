/* Is USB connected */
bool Sys_IsUSBConnected(void)
{
    return Sys.PwrStat.BQ241X.USBPwr;
}

/* Is TCM connected */
bool Sys_IsTCMConnected(void)
{
    return Sys.PwrStat.BQ241X.VINPwr;
}

/* Battery level */
uint32_t Sys_GetBattLevel(void)
{
	if(Sys.PwrStat.BQ_Present)
		return Sys.PwrStat.BQ27xxx.BattLevel;
	if(Sys.PwrStat.LC_Present)
		return Sys.PwrStat.LC709X.BattLevel;

	return 123;
}

/* Battery voltage */
float32_t Sys_GetBattVoltage(void)
{
	if(Sys.PwrStat.BQ_Present)
		return Sys.PwrStat.BQ27xxx.AvgVolts;
	if(Sys.PwrStat.LC_Present)
		return Sys.PwrStat.LC709X.AvgVolts;

	return 123;
}

/* Battery temperature */
float32_t Sys_GetBattTemp(void)
{
	if(Sys.PwrStat.BQ_Present)
		return Sys.PwrStat.BQ27xxx.BattTemp;
	if(Sys.PwrStat.LC_Present)
		return Sys.PwrStat.LC709X.BattTemp;

	return 123;
}

/* Temperature Limit Alarm */
bool Sys_AlarmBattTemp(void)
{
    return Sys.PwrStat.AlarmTemp;
}

/* Low charge Alarm - when RSOC is < 8% */
bool Sys_AlarmLowCharge(void)
{
	if(Sys.PwrStat.BQ_Present)
		return Sys.PwrStat.BQ27xxx.AlarmLowChrgLowVolt;
	if(Sys.PwrStat.LC_Present)
		return Sys.PwrStat.LC709X.AlarmLowChrgLowVolt;

	return 0;
}

/* Check operating conditions */
uint32_t Sys_CheckOpConditions(void)
{
    /* Is temperature is out of limits */
    float32_t curTemp = Sys_GetBattTemp();
    if(curTemp < BATT_TEMP_LOW_LVL)
        return SYS_ERR_TEMP_LOW;
    if(curTemp > BATT_TEMP_HIGH_LVL)
        return SYS_ERR_TEMP_HIGH;

    return 0;
}

/* Set keypad active */
void Sys_SetKeypadActive(uint32_t Key)
{
    Sys.LastActiveTime = xTaskGetTickCount();
    if(Key != KEY_PWR) {
        if(Disp_IsDim())
            Disp_TurnUpBacklight();
    }
}
#endif
/* Set comm active */
void Sys_SetCommActive(void)
{
    Sys.LastActiveTime = xTaskGetTickCount();
    if(Disp_IsDim())
        Disp_TurnUpBacklight();
}

/* Shutdown */
void Sys_Shutdown(bool IsRunning)
{
	GoShutdown(IsRunning);
}

/* Set wakeup from EXT_PWR */
void Sys_SetWakeupOnExtPwr(bool Wakeup)
{
    Sys.WakeupOnExtPwr = Wakeup;
}

/* Get EXT_PWR wakeup status */
bool Sys_GetWakeupOnExtPwr(void)
{
    return Sys.WakeupOnExtPwr;
}

StdReturn_t Sys_CheckPwrConfig()
{
	return Power_BQGoldenDFI(&Sys.PwrStat);
}

/* Disables BQ2414x OTG mode */				/* PN - #349 Gauge Power Down Issue */
void Sys_DisableOTGmode()
{
	Power_DisableOTGmode();
}

